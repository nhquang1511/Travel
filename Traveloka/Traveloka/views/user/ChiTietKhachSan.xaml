                                                                <DropShadowEffect ShadowDepth="5" BlurRadius="10" Color="Gray" Opacity="0.3"/>
                                                            </Border.Effect>
                                                            <Label Content="Giảm 500k trong dịp lễ 30/4 và 1/5" Background="Transparent" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" FontSize="12" BorderThickness="0"/>
                                                        </Border>
                                                    </Grid>
                                                </Grid>
                                                <Grid Grid.Column="2" Background="#ffffff" Margin="5,0,0,0">
                                                    <StackPanel>
                                                        <Border CornerRadius="10" Background="#baf075" Margin="150,30,7,7">
                                                            <Border.Effect>
                                                                <DropShadowEffect ShadowDepth="5" BlurRadius="10" Color="Gray" Opacity="0.3"/>
