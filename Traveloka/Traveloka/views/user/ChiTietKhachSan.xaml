                                    <Image Source="\icons\Star.png" Stretch="Uniform" Height="10" Width="10" Margin="5,0,0,0"/>
                                </WrapPanel>
                            </StackPanel>
                        </Grid>
                        <Grid Width="1000" Background="#ffffff">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
