                                                        <Label Content="John Doe" HorizontalAlignment="Right" DockPanel.Dock="Right"/>
                                                        <!-- Nhãn đánh giá -->
                                                    </DockPanel>
                                                    <Label Content="Positive" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
