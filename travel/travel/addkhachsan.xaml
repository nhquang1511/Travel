<Window x:Class="travel.addkhachsan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:travel"
        mc:Ignorable="d"
        Title="addkhachsan" Height="100" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <WrapPanel>
            <Label>id</Label>
            <TextBox x:Name="txtID" Width="50px"></TextBox>
            <Label>tên</Label>
            <TextBox x:Name="txtTenKhachSan" Width="100px"></TextBox>
            <Label>địa chỉ</Label>
            <TextBox  x:Name="txtDiaChi" Width="100px"></TextBox>
            <Label>loại</Label>
            <ComboBox x:Name="comboBoxLoaiKhachSan" Width="100px">
                <ComboBoxItem Content="Hotel"/>
                <ComboBoxItem Content="Homestay"/>
            </ComboBox>
            <Button HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" Padding="1,1,1,1" Click="Button_Click">add</Button>
        </WrapPanel>
    </Grid>
</Window>
